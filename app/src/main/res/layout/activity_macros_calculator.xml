<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    android:padding="20dp">

    <TextView
        android:id="@+id/macrosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/macros_calculator"
        android:textColor="#00796B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/dailyCaloriesInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_daily_calories_needed"
        android:textColorHint="#757575"
        android:textColor="@color/black"
        android:inputType="number"
        android:padding="12dp"
        android:backgroundTint="#00796B"
        app:layout_constraintTop_toBottomOf="@id/macrosTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/calculateMacrosButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/calculate_macros"
        android:backgroundTint="#00796B"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/dailyCaloriesInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/macrosResultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="#00796B"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/calculateMacrosButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
