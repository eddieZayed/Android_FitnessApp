<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    android:padding="20dp">

    <TextView
        android:id="@+id/workoutTrackerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/workout_tracker"
        android:textColor="#00796B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnCardioWorkouts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cardio_workouts"
        android:backgroundTint="#00796B"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/workoutTrackerTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnGymWorkouts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/gym_workouts"
        android:backgroundTint="#00796B"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/btnCardioWorkouts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
